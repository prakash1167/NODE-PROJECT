<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Project - Checkout</title>
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>
	<div class="main-content">
		<header class="header bg-white" id="header">
			<div class="container-fluid">
				<div class="page-header">
					<div class="header-left">
						<div class="logo-image">
				            <a href="/admin">
				            	<img src="/images/wigo-logo-img.png" width="70" height="36" alt="Wigo Store" itemprop="logo">
				            </a>
				      	</div>
			      	</div>
			      	<div class="header-right">
			      		<div class="header-items">
				          	<span class="sign-in">
			            		<svg width="22px" height="22px" viewBox="-1 -1 21 20">
								  	<g transform="translate(0.968750, -0.031250)" stroke="none" stroke-width="1" fill="currentColor" fill-rule="nonzero">
								    	<path d="M9,7.5 C10.704,7.5 12.086,6.157 12.086,4.5 C12.086,2.843 10.704,1.5 9,1.5 C7.296,1.5 5.914,2.843 5.914,4.5 C5.914,6.157 7.296,7.5 9,7.5 Z M9,9 C6.444,9 4.371,6.985 4.371,4.5 C4.371,2.015 6.444,0 9,0 C11.556,0 13.629,2.015 13.629,4.5 C13.629,6.985 11.556,9 9,9 Z M1.543,18 L0,18 L0,15 C0,12.377 2.187,10.25 4.886,10.25 L14.143,10.25 C16.273,10.25 18,11.929 18,14 L18,18 L16.457,18 L16.457,14 C16.457,12.757 15.421,11.75 14.143,11.75 L4.886,11.75 C3.04,11.75 1.543,13.205 1.543,15 L1.543,18 Z"></path>
								  	</g>
								</svg>
								<div class="head-link bg-white">
									<a class="main-menu-link" href="/admin/logout">Logout</a>
								</div>
				          	</span>
				        </div>
					</div>
				</div>
			</div>
		</header>

		<section class="flex">
			<div class="container-fluid">
				<div class="admin-content">
					<div class="admin-left-nav mt-20">
						<ul>
							<li><a href="/admin/products">Products</a></li>
							<li><a href="/admin/orders">Orders</a></li>
							<li><a class="active" href="javascript:;">Discounts</a></li>
						</ul>
					</div>
					<div class="admin-right page-content">
						<div class="products-list">
							<div class="actions flex items-center">
								<h3><%=Coupon.code%></h3>
							</div>
							<div class="view-orders">
								<div class="main-cart-wrapper">
					                <div class="cart__items cart__block">
						                <div class="form-inline">
											<form action="/admin/<%=Coupon.id%>/editdiscount"></form>
						                	<div class="order__details-wrap">
						                		<div class="flex">
							                		<div class="w-50 pr-10">
								                    	<h4>Discount code</h4>
								                    	<input type="text" value="<%=Coupon.code%>" placeholder="" class="">
							                    	</div>
							                    	<div class="w-50 pl-10">
								                    	<h4>Discount Value (in %)</h4>
								                    	<input type="text" value="<%=Coupon.percentage%>" placeholder="" class="">
								                    </div>
							                    </div>
							                    <div class="mt-10">
							                    	<h4>Status</h4>
							                    	<div class="">
														<label for="enable">
															<input type="radio" class="input-text" checked id="enable" name="status">
															Enable
														</label>
													</div>
													<div class="mt-10">
														<label for="disable">
															<input type="radio" class="input-text" id="disable" name="status">
															Disable
														</label>
													</div>
							                    </div>
							                </div>
							                <div class="order__details-wrap mt-20">    
							                    <div class="">
							                    	<h4>Applies to</h4>
							                    	<div class="">
														<label for="all">
															<input type="radio" class="input-text"checied id="all" name="products" onclick="javascript:showModal();">
															All Products
														</label>
													</div>
													<div class="mt-10">
														<label for="specific">
															<input type="radio" checked class="input-text" id="specific" name="products" onclick="javascript:showModal();">
															Specific products
														</label>
													</div>
							                    </div>
							                    <div class="added-products mt-20">
													<table class="table">
														<tbody>
															<%if (Products.length>0){%>
																<%for(let Product of Products){%>
															<tr>
																<td><span class="admin-list-img"><img src="<%=Product.image%>" alt=""></span></td>
																<td>
																	<div class="">
																		<a href="/admin/editproduct/<%=Product._id %>"><u><%=Product.product_name %></u></a>
																	</div>
																</td>
																<td class="text-right"><a href="/admin/deletespecific/<%=Product._id%>"><u>Remove</u></a></td>
															</tr><%}%>
															<% }  else { %>
																<tr>
															   <td>No data found</td>
														   </tr><%}%>
															

														</tbody>
													</table>
												</div>
							                    <div class="mt-20 discount-period">
							                    	<h4>Active Dates</h4>
							                    	<div class="flex">
							                    		<div class="w-50 pr-10">
							                    			<label for="">Start Date</label>
								                    		<input type="text" value="<%=Coupon.start_date%>" placeholder="" class="">
								                    	</div>
								                    	<div class="w-50 pl-10">
							                    			<label for="">End Date</label>
								                    		<input type="text" value="<%=Coupon.end_date%>" placeholder="" class="">
								                    	</div>
							                    	</div>
							                    </div>
						                    </div>
						                    
						                </div>
						                <div class="mt-20">
						                	<a href="/admin/checkout" class="button checkout_btn button--hollow">Save</a>
						                	<button class="button update_btn" type="submit">Delete</button>
						                </div>
					                </div>
					                <div class="cart__details cart__block add-margin">
						                <div class="order__details-wrap">
						                    <h3>Summary</h3>
						                    <div class="border-t mt-10">
							                    <div class="flex mt-20">
							                    	<p><strong>Cart Offer</strong></p>
							                    	<span class="color-green"><%=Coupon.status%></span>
							                    </div>
						                    </div>
						                    <ul class="list-items">
						                    	<li><%=Coupon.percentage%>% off products</li>
						                    	<li><%=Coupon.status%> from <%=Coupon.start_date%></li>
						                    </ul>
						                </div>
						            </div>
				                </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<footer class="footer bg-white">
			<div class="container-fluid">
				This is footer section
			</div>
		</footer>
		<div id="show-modal">
			<div class="overlay"></div>
			<div class="admin-right page-content">
				<div class="products-list">
					<div class="actions flex items-center">
						<h3>Add products</h3>
					</div>
					<div class="added-products border-t">
						<div class="overflow-auto">
							<table class="table mt-20">
								<thead>
									<tr>
										<th><input type="checkbox" id="select-all"></th>
										<th>Image</th>
										<th>Product Name</th>
										<th>Price</th>
										<th>Inventory</th>
									</tr>
								</thead>
								<tbody>
									
									<%if (Products.length>0){%>
										<%for(let Product of Products){%>
									<tr >
										<td><input value="<%=Product.id%>" type="checkbox" name="prod-item"></td>
										<td><span class="admin-list-img"><img src= <%=Product.image%> alt=""></span></td>
										<td>
											<div class="">
												<a href="/admin/<%=Product.id%>/editproduct"><u><%=Product.product_name%></u></a>
											</div>
											<span>SKU: <span><%=Product.sku%></span></span>
										</td>
										<td><%=Product.offer_price%></td>
										<td><%=Product.inventory%></td>
									</tr><%}%>
									<% }  else { %>
										<tr>
									   <td>No data found</td>
								   </tr><%}%>
									
								</tbody>
							</table>
						</div>
					</div>
					<div class="mt-20">
	                	<a href="#" ld="valuelist" class="button checkout_btn button--hollow">Add Products</a>
	                	<button class="button update_btn" id="close-modal" type="submit" onclick="javascript:hideModal();">Close</button>
	                </div>
				</div>
			</div>
		</div>
	</div>
	<script>
		var specific = document.getElementById("specific");
        var show_modal = document.getElementById("show-modal");
		var closeModal = document.getElementById("close-modal");

		function showModal() {
            if (specific.checked === true) {
                show_modal.style.display = "flex";
            } else {
                show_modal.style.display = "none";
            }
        }
        function hideModal() {
            if (show_modal.style.display === "none") {
			    show_modal.style.display = "block";
			  } else {
			    show_modal.style.display = "none";
			  }
        }
    </script>
</body>
</html>